<h1>Welcome <%= @user.name %>  </h1>
<h3>My Recipes: </h3>
<p> <%@user.recipes.each do |recipe| %>
    <li><a href="/recipes/<%= recipe.id %>"><%= recipe.title%> </a> <li>
    <% end %>

</p>
    

<% if @recipe.user == current_user %>
<a href="/recipes/<%= @recipe.id %>/edit"> Edit Recipe </a>
<br><br>
<form class="" action="/recipes/<%= @recipe.id %>/delete" method="post">
<input type="hidden" name="_method" value="DELETE">
<input type="submit" name="" value="Delete Recipe">
<% end %> 