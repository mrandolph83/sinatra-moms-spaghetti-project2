<h1>Appetizer Recipes</h1>


<% @appetizer_array = @recipes.select { |recipe| recipe.category.start_with? "a"}%>

<% @appetizer_sorted = @appetizer_array.sort {|a, b| a.title <=> b.title } %>
    
<div class ="top-nav">

<% @appetizer_sorted.each do |recipe| %>
    <a href="/recipes/<%= recipe.id %>"><img src=<%= recipe.pic_url %> width="185px" height="auto" style="margin:3px"><h4><%= recipe.title%></h4> 
    <h5>simple: <%= simple_review(recipe.id).to_f.round(1) %> </h5>
    <h5>healthy: <%= healthy_review(recipe.id).to_f.round(1) %> </h5>
    <h5>tasty: <%= tasty_review(recipe.id).to_f.round(1) %> </h5></a>
    <% end %>
    
    </div>
   


