<h1>Breakfast Recipes</h1>



<% @breakfast_array = @recipes.select { |recipe| recipe.category.start_with? "b"}%>

<% @breakfast_sorted = @breakfast_array.sort {|a, b| a.title <=> b.title } %>
    
<div class ="top-nav">

<% @breakfast_sorted.each do |recipe| %>
    
<a href="/recipes/<%= recipe.id %>"><img src=<%= recipe.pic_url %> width="185px" height="auto" style="margin:3px"><h4><%= recipe.title%></h4></a> 
    <% end %>
    
    </div>
   


