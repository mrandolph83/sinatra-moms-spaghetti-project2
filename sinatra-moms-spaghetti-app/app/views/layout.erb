    <title>SinatraMomsSpaghettiApp</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
    <link rel="stylesheet" href="/stylesheets/flexbox.css" />
  </head>
  <body>

    <div class="nav">
    <% if logged_in? %> 
    <a href="/logout">Logout</a>
    <a href="/recipes">Recipes</a>
    <a href="/recipes/new">Post a Recipe</a>
    <a href="/users/<%=current_user.id%>">My Recipes</a>
    <% end %>
    </div>

    <% if flash[:message] %>
  <h4> <%= flash[:message] %> </h4>
  <% end %>
  <% if flash[:errors] %>
  <h4 style="color: red;"> <%= flash[:errors] %> </h4>
  <% end %>
 
    <div class="wrapper">
    <div class="main-logo"><img src="/images/moms_spaghetti_logo.png"></div>
    <div class="top-nav">
  
      <div class="item setWidth"><img src="/images/nav1_breakfast.png"></div>
      <div class="item setWidth"><img src="/images/nav2_main_dish.png"></div>
      <div class="item setWidth"><img src="/images/nav3_side_dish.png"></div>
      <div class="item setWidth"><img src="/images/nav4_appetizer.png"></div>
      <div class="item setWidth"><img src="/images/nav5_dessert.png"></div>
    </div>
 
    
  

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2021 <strong>SinatraMomsSpaghettiApp</strong></small>
      </footer>
    </div>

